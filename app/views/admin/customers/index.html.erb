<main>
  <div class="container">
    <div class="row">
      <div class="offset-2 col-10 py-sm-4 px-sm-4">
        <h5>会員一覧</h5>
      </div>
    </div>
  </div>
  
    
      <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                  <th colspan="4"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @customers.each do |customer| %>
                  <td><%= customer.id %></td>
                  <td><%=link_to customer.first_name, admin_customer_path(customer.id)%></td>
                  <td><%= customer.email %></td>
                  <td></td>
                  <td colspan="4"></td>
                </tr>
              </tbody>
                  <% end %>
                <div class="row">
                  <div class=" mx-auto">
                  <%= paginate @customers %>
                  </div>
                </div>
            </table>
          </div>
      </div>
    
</main>