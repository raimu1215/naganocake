<main>
  <div class="pull-left">
    <h5>会員一覧</h5>
  </div>
  
    <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                  <th colspan="4"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @customers.each do |customer| %>
                  <td></td>
                  <td><%=link_to customer.name, admin_customer_path(:id)%></td>
                  <td><%= customer.email %></td>
                  <td></td>
                  <td colspan="4"></td>
                </tr>
              </tbody>
                  <% end %>
                  <%= paginate @customers %>
            </table>
          </div>
      </div>
    </div>
</main>