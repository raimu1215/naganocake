<main>
  <div class="pull-left">
    <h5>注文履歴一覧</h5>
  </div>
  
    <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>購入日時</th>
                  <th>購入者</th>
                  <th>注文個数</th>
                  <th>注文ステータス</th>
                  <th colspan="4"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @order_details.each do |order_detail| %>
                  <td><%=link_to created_at %></td>
                  <td><%= @customer.last_name, first_name %></td>
                  <td><%= order_detail.amount %></td>
                  <td></td>
                  <td colspan="4"></td>
                </tr>
              </tbody>
                  <% end %>
                  <%= paginate @order_histories %>
            </table>
          </div>
      </div>
    </div>
</main>