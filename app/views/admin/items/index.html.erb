<main>
  <div class="pull-left">
    <h5>商品一覧</h5>
  </div>
  
    <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>商品ID</th>
                  <th>商品名</th>
                  <th>税抜価格</th>
                  <th>ジャンル</th>
                  <th>ステータス</th>
                  <th colspan="5"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @items.each do |item| %>
                  <td></td>
                  <td><%=link_to item.name, admin_item_path(:id)%></td>
                  <td><%= item.price %></td>
                  <td></td>
                  <td></td>
                  <td colspan="5"></td>
                </tr>
              </tbody>
                  <% end %>
            </table>
          </div>
      </div>
    </div>
</main>