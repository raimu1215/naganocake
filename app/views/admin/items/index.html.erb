<main>
  <div class="container">
    <div class="row">
      <div class="offset-2 col-10 py-sm-4 px-sm-4">
        <h5>商品一覧</h5>
      </div>
    </div>
  
    <div class="row">
      <div class="offset-7 col-5 py-sm-4 px-sm-4">
        <p><%= link_to '商品新規登録', new_admin_item_path %></p>
      </div>
  </div>
    
      <div class="row">
          <div class=" mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>商品ID</th>
                  <th>商品名</th>
                  <th>税抜価格</th>
                  <th>ジャンル</th>
                  <th>ステータス</th>
                  <th colspan="5"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @items.each do |item| %>
                  <td><%= item.id %></td>
                  <td><%=link_to item.name, admin_item_path(item.id)%></td>
                  <td><%= item.price %></td>
                  <td></td>
                  <td></td>
                  <td colspan="5"></td>
                </tr>
              </tbody>
                  <% end %>
                <div class="row">
                  <div class=" mx-auto">
                  <%= paginate @item %>
                  </div>
                </div>
            </table>
          </div>
      </div>
    
</main>