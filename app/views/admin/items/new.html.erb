<main>
  <div class="conteiner">
    <div class="low">
    <div class="col-sm-12 col-md-8 col-lg-5 py-sm-4 px-sm-4">
    <h5>商品新規登録</h5>
    </div>
  </div>
  </div>
    <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <%= form_with model: Item.new, url: admin_items_path do |f| %>
            <div class="row">
              <p class="col-auto">商品画像</p>
                  <div class="form-group">
                    <%= f.file_field :item_image, accept: "image/*" %>
                  </div>
            </div>
            <div class="row">
              <p class="col-auto">商品名</p>
                  <div class="col-auto">
                  <div class="form-group">
                    <%= f.text_field :name %>
                  </div>
                  </div>
            </div>
            <div class="row">
              <p class="col-auto">商品説明</p>
                  <div class="form-group">
                    <%= f.text_area :introduction %>
                  </div>
            </div>
              <p>ジャンル</p>
            <div class="row">
              <p class="col-auto">税抜価格</p>
                  <div class="form-group">
                    <%= f.text_field :price %>円
                  </div>
            </div>
              <%= f.submit '新規登録', class: "btn-success" %>
              <% end %>
          </div>
      </div>
    </div>
</main>