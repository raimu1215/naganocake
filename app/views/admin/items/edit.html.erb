<main>
  <div class="pull-left">
    <h5>商品編集</h5>
  </div>
  <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
              <p>商品画像</p>
                  <div class="form-group">
                    <%= f.file_field :item_image, accept: "image/*" %>
                  </div>
              <p>商品説明</p>
                  <div class="col-auto">
                    <p><%= @item.introduction %></p>
                  </div>
              <p>ジャンル</p>
              <p>税抜価格</p>
                  <div class="form-group">
                    <p><%= @item.price %></p>
                  </div>
              <%= f.submit '変更を保存', class: "btn-success" %>
              <% end %>
          </div>
      </div>
    </div>
</main>