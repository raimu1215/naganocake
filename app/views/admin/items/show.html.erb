<main>
  <div class="pull-left">
    <h5>商品詳細</h5>
  </div>
  <div class="conteiner">
      <div class="low">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <p>商品名</p>
                  <div class="col-auto">
                    <p><%= @item.name %></p>
                  </div>
              <p>商品説明</p>
                  <div class="col-auto">
                    <p><%= @item.introduction %></p>
                  </div>
              <p>ジャンル</p>
              <p>税抜価格</p>
                  <div class="form-group">
                    <p><%= @item.price %></p>
                  </div>
              <div class="btn btn-sm btn-success">
                <%=link_to edit_admin_item_path(@item) do %>
                  編集する
                <% end %>
              </div>
          </div>
      </div>
    </div>
</main>