<main>
<div class="conteiner">
  <div class="low">
    <div class="col-sm-12 col-md-8 col-lg-5 py-sm-4 px-sm-4">
      <h5>新規会員登録</h5>
    </div>
  </div>
</div>
<%= form_with model:@customer, url:customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
<div class="conteiner">
  <div class="low">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
<div class="row">
  <div class="form-group">
    <p class="col-auto">名前</p>
      <div class="col-auto">
    <%= f.label :last_name, '(姓)' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :first_name, '(名)' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
  </div>
</div>
  
<div class="row">
  <div class="form-group">
    <p class="col-auto">フリガナ</p>
      <div class="col-auto">
    <%= f.label :last_name_kana, '(セイ)' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <p class="col-auto">メールアドレス</p>
      <div class="col-auto">
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
       </div>
  </div>
</div>
<div class="row">
  <div class="form-group">
    <p class="col-auto">郵便番号</p>
      <div class="col-auto">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
       </div>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <p class="col-auto">住所</p>
      <div class="col-auto">
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
       </div>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <p class="col-auto">電話番号(ハイフンなし)</p>
      <div class="col-auto">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
       </div>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <p class="col-auto">パスワード(6文字以上)</p>
      <div class="col-auto">
    <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <p class="col-auto">パスワード(確認用)</p>
      <div class="col-auto">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
</div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="conteiner">
  <div class="low">
    <div class="col-sm-12 col-md-8 col-lg-5 py-sm-4 px-sm-4">
      <h5>既に登録済みの方</h5>
    </div>
  </div>
</div>

<p><%= render "public/shared/links" %>からログインしてください。</p>
    </div>
  </div>
</div>
</main>