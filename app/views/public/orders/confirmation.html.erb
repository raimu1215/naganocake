<main>
  <div class="container">
      <div class="row">
        <div class="offset-2 col-10 py-sm-4 px-sm-4">
          <h5>注文情報確認</h5>
        </div>
      </div>
  </div>
  
  <%= form_with model: @order, url: orders_thanks_path do |f| %>
  
    
      <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価(税込)</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th colspan="4"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @cart_items.each do |cart_item| %>
                  <td><%= cart_item.item.name %></td>
                  <td><%= cart_item.add_tax_price.to_s(:delimited) %></td>
                  <td><%= cart_item.amount %></td>
                  <td><%= cart_item.subtotal %></td>
                  <td colspan="4"></td>
                </tr>
              </tbody>
                  <% end %>
            </table>
          </div>
      <div>
    
            
    
      <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <table class="table table-hover table-inverse">
            <thead>
              <tr><th>送料</th><td>800</td></tr>
              <tr><th>商品合計</th><td><%= @total.round.to_s(:delimited)%></td></tr><% @total_payment = @total + 800 %>
              <tr><th>請求金額</th><td><%= @total_payment.round.to_s(:delimited) %></td></tr>
              <tr><th colspan="3"></th></tr>
            </thead>
            <tbody>
              <tr><td>800</td></tr>
              <tr><td><%= @total.round.to_s(:delimited)%></td></tr>
              <% @total_payment = @total + 800 %>
              <tr><td><%= @total_payment.round.to_s(:delimited) %></td></tr>
              <tr><td colspan="3"></td></tr>
            </tbody>
            </table>
        </div>
      </div>
    
            <%= form_with model: @order do |f| %>
            <h5><strong>支払い方法</strong></h5>
            <%= @order.payment_method %>
            <%= f.hidden_field :payment_method %>
            
            <h5><strong>お届け先</strong></h5>
            <%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
            <%= f.hidden_field :postal_code %>
            <%= f.hidden_field :address %>
            <%= f.hidden_field :name %>
            
            <% end %>
          
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :total_price, value: @total %>
          <%= f.submit '注文を確定する', class: "btn-success" %>
    <% end %>
  <% end %>
</main>